<div class="container m-6">
    <div class="columns">
        <div class="column">
            <h1>Servicio web</h1>
            <div class="card mt-6">
                <div class="card-content">
                    <div class="content">
                        <a href="/todo-create" class="button is-success">Crear
                            nuevo</a>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Title</th>
                                    <th>Description</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each todos}}
                                    <tr>
                                        <th>{{this.id}}</th>
                                        <td>{{this.title}}</td>
                                        <td>{{this.description}}</td>
                                        <td><a
                                                class="button is-danger"
                                                href="todos/{{this.id}}"
                                            >Eliminar</a></td>
                                    </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>